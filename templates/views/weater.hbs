                      </div>
                  </div>
            </div>
        </div>
    </div>

</div> 
{{>footer}}
<script src="js/main.js"></script>
<script>
 const getcurrday=()=>{
         var weekday = new Array(7); 
         weekday[0] = "Sunday";
         weekday[1] = "Monday";
         weekday[2] = "Tuesday";
         weekday[3] = "Wednesday";
         weekday[4] = "Thursday";
         weekday[5] = "Friday";
         weekday[6] = "Saturday"; 
         let currtime=new Date();
        // console.log(weekday[currtime.getDay()]);
        let day=weekday[currtime.getDay()];
        return day;
     };
     day.innerHTML=getcurrday();
     const getcurrtime=()=>{
         var months=["jan","Feb","Mar","Apr","May","June","July","Aug","Sep","Oct","Nov","Dec"];
         var now=new Date();
         var month=months[now.getMonth()];
         var date=now.getDate();
         var hours=now.getHours();
         var perios;
         var mins=now.getMinutes();
         if(hours>=12){
           perios="PM";
             if(hours>!12){
                 hours-=12;
             }
         }
         else{
             perios="AM";
         }
         if(mins<10){
             mins="0"+mins;
         }
         return `${month}${date} | ${hours}:${mins}${perios}`;
        };
        today_data.innerHTML=getcurrtime();
     </script>
</body>
